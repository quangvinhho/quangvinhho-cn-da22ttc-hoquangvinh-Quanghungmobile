              Điện thoại
              <i class="fa-solid fa-chevron-down text-xs"></i>
            </button>
            <!-- Dropdown -->
            <div class="absolute left-0 top-full mt-1 w-48 bg-white shadow-xl rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="py-2">
                <a href="products.html?brand=iphone" class="flex items-center gap-2 px-4 py-2 hover:bg-red-50 transition-colors text-gray-700 text-sm">
