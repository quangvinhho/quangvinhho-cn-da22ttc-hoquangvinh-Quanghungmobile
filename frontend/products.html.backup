        <!-- Search - Desktop -->
        <!doctype html>
        <html lang="vi">
          <head>
            <meta charset="UTF-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <title>QuangHưng Mobile — Sản phẩm</title>
            <meta name="description" content="Trang sản phẩm - QuangHưng Mobile" />

            <!-- Tailwind -->
            <script src="https://cdn.tailwindcss.com"></script>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
            <link rel="stylesheet" href="responsive.css">

            <style>
              :root{--red:#d91e23;--red-dark:#b01117;--text:#1a1a1a;--muted:#666}
              body{background:#f8f9fa;color:var(--text)}
              .brand-logo{transition:all .18s;border-radius:.5rem}
              .brand-logo:hover{transform:scale(1.03);box-shadow:0 6px 18px rgba(0,0,0,.08)}
              .card{transition:all .25s;border-radius:.75rem}
              .card:hover{transform:translateY(-6px);box-shadow:0 12px 30px rgba(0,0,0,.08)}
              .focus-ring:focus{outline:3px solid rgba(217,30,35,.14);outline-offset:2px}
            </style>
          </head>
          <body>

            <!-- Header -->
            <header class="bg-[var(--red-dark)] text-white sticky top-0 z-40 shadow">
              <div class="container mx-auto px-4 py-3 flex items-center justify-between">
                <a href="index.html" class="flex items-center gap-3">
                  <img src="images/Logo.jpg" alt="QuangHưng Mobile" class="h-10 rounded-md" />
                  <span class="hidden sm:inline font-bold text-lg">QuangHưng Mobile</span>
                </a>
                <div class="hidden md:flex items-center gap-3">
                  <input id="search" class="px-3 py-2 rounded-md w-72 text-sm focus-ring" placeholder="Tìm kiếm sản phẩm..." />
                  <button class="bg-[var(--red-dark)] px-4 py-2 rounded-md font-semibold">Tìm</button>
                </div>
                <div class="flex items-center gap-3">
                  <a href="cart.html" class="hidden md:inline">Giỏ hàng</a>
                  <button id="mobile-filter-btn" class="md:hidden px-3 py-2 bg-white text-[var(--red-dark)] rounded-md">Bộ lọc</button>
                </div>
              </div>
            </header>

            <!-- Banner -->
            <section class="container mx-auto px-4 mt-6">
              <div class="w-full bg-white rounded-xl overflow-hidden card">
                <img src="images/BC.jpg" alt="Banner" class="w-full h-44 object-cover" />
              </div>

              <!-- Brand logos row -->
              <div class="mt-4 bg-white rounded-xl p-3 flex items-center justify-between overflow-x-auto scrollbar-hide gap-3">
                <!-- logos: use files in images/ -->
                <div class="flex items-center gap-3">
                  <button class="brand-logo p-2 bg-white border border-gray-100" data-brand="all" aria-pressed="true">Tất cả</button>
                  <button class="brand-logo p-2 bg-white border border-gray-100" data-brand="iphone"><img src="images/iphone.jpg" alt="Apple" class="h-8"/></button>
                  <button class="brand-logo p-2 bg-white border border-gray-100" data-brand="samsung"><img src="images/samsung.webp" alt="Samsung" class="h-8"/></button>
                  <button class="brand-logo p-2 bg-white border border-gray-100" data-brand="xiaomi"><img src="images/uni8.jpg" alt="Xiaomi" class="h-8"/></button>
                  <button class="brand-logo p-2 bg-white border border-gray-100" data-brand="sony"><img src="images/w.webp" alt="Sony" class="h-8"/></button>
                  <button class="brand-logo p-2 bg-white border border-gray-100" data-brand="google"><img src="images/inta.webp" alt="Google" class="h-8"/></button>
                </div>
              </div>
            </section>

            <!-- Main area: sidebar + products -->
            <main class="container mx-auto px-4 py-6">
              <div class="flex gap-6">

                <!-- Sidebar (desktop) -->
                <aside id="sidebar" class="hidden lg:block w-72 sticky top-24">
                  <div class="bg-white p-4 rounded-xl shadow-sm">
                    <div class="flex items-center justify-between mb-4">
                      <h3 class="font-bold">Bộ lọc</h3>
                      <button id="clearFilters" class="text-sm text-[var(--red-dark)]">Xóa</button>
                    </div>

                    <div class="mb-4">
                      <label class="block text-sm font-semibold mb-2">Giá</label>
                      <select id="priceRange" class="w-full p-2 border rounded focus-ring">
                        <option value="any">Tất cả</option>
                        <option value="0-5000000">Dưới 5.000.000</option>
                        <option value="5000000-10000000">5.000.000 - 10.000.000</option>
                        <option value="10000000-20000000">10.000.000 - 20.000.000</option>
                        <option value="20000000-999999999">Trên 20.000.000</option>
                      </select>
                    </div>

                    <div class="mb-4">
                      <label class="block text-sm font-semibold mb-2">RAM</label>
                      <div class="flex gap-2 flex-wrap">
                        <button class="ram-btn px-3 py-1 border rounded text-sm" data-ram="4">4 GB</button>
                        <button class="ram-btn px-3 py-1 border rounded text-sm" data-ram="6">6 GB</button>
                        <button class="ram-btn px-3 py-1 border rounded text-sm" data-ram="8">8 GB</button>
                        <button class="ram-btn px-3 py-1 border rounded text-sm" data-ram="12">12 GB</button>
                      </div>
                    </div>

                    <div>
                      <label class="block text-sm font-semibold mb-2">Tính năng</label>
                      <label class="flex items-center gap-2"><input type="checkbox" id="f-5g"> <span class="text-sm">Hỗ trợ 5G</span></label>
                      <label class="flex items-center gap-2"><input type="checkbox" id="f-sale"> <span class="text-sm">Đang giảm giá</span></label>
                      <label class="flex items-center gap-2"><input type="checkbox" id="f-tragop"> <span class="text-sm">Trả góp 0%</span></label>
                    </div>
                  </div>
                </aside>

                <!-- Products column -->
                <section class="flex-1">
                  <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center gap-3">
                      <label class="hidden sm:inline text-sm text-muted">Sắp xếp:</label>
                      <select id="sortBy" class="p-2 border rounded focus-ring text-sm">
                        <option value="default">Mặc định</option>
                        <option value="price-asc">Giá: thấp → cao</option>
                        <option value="price-desc">Giá: cao → thấp</option>
                        <option value="name">Tên A → Z</option>
                      </select>
                    </div>
                    <div class="text-sm text-gray-600">Hiển thị <span id="count" class="font-semibold">8</span> sản phẩm</div>
                  </div>

                  <!-- Grid -->
                  <div id="grid" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                    <!-- product cards will be injected by JS from initial dataset -->
                  </div>

                </section>
              </div>
            </main>

            <!-- Mobile filter sheet -->
            <div id="mobileFilter" class="fixed inset-0 bg-black bg-opacity-40 hidden z-50">
              <div class="absolute bottom-0 left-0 right-0 bg-white rounded-t-xl p-4 max-h-[70vh] overflow-auto">
                <div class="flex items-center justify-between mb-3">
                  <h4 class="font-bold">Bộ lọc</h4>
                  <button id="mobileFilterClose" class="text-sm text-[var(--red-dark)]">Đóng</button>
                </div>
                <!-- reuse some controls -->
                <div class="mb-3">
                  <label class="block text-sm font-semibold mb-2">Giá</label>
                  <select id="priceRangeMobile" class="w-full p-2 border rounded focus-ring">
                    <option value="any">Tất cả</option>
                    <option value="0-5000000">Dưới 5.000.000</option>
                    <option value="5000000-10000000">5.000.000 - 10.000.000</option>
                    <option value="10000000-20000000">10.000.000 - 20.000.000</option>
                    <option value="20000000-999999999">Trên 20.000.000</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label class="block text-sm font-semibold mb-2">Tính năng</label>
                  <label class="flex items-center gap-2"><input type="checkbox" id="m-f-5g"> <span class="text-sm">Hỗ trợ 5G</span></label>
                  <label class="flex items-center gap-2"><input type="checkbox" id="m-f-sale"> <span class="text-sm">Đang giảm giá</span></label>
                </div>
                <div class="flex gap-2">
                  <button id="applyMobileFilters" class="flex-1 bg-[var(--red-dark)] text-white py-2 rounded">Áp dụng</button>
                  <button id="clearMobileFilters" class="flex-1 border py-2 rounded">Xóa</button>
                </div>
              </div>
            </div>

            <!-- Footer minimal -->
            <footer class="mt-8 py-6 text-center text-sm text-gray-600">© 2025 QuangHưng Mobile</footer>

            <script>
              // Simple product dataset
              const PRODUCTS = [
                {id:1,brand:'iphone',name:'iPhone 16 Pro Max 256GB',price:34990000,ram:12,features:['tragop'],img:'https://cdn.tgdd.vn/Products/Images/42/316126/iphone-16-pro-max-titan-sa-mac-1-750x500.jpg'},
                {id:2,brand:'samsung',name:'Samsung S24 Ultra 256GB',price:29990000,ram:12,features:['sale'],img:'https://cdn.tgdd.vn/Products/Images/42/307174/samsung-galaxy-s24-ultra-grey-thumbnew-600x600.jpg'},
                {id:3,brand:'sony',name:'Sony Xperia 1 VI 256GB',price:32990000,ram:12,features:['tragop'],img:'https://cdn2.cellphones.com.vn/insecure/rs:fill:358:358/q:90/plain/https://cellphones.com.vn/media/catalog/product/x/p/xperia-1-vi.png'},
                {id:4,brand:'google',name:'Google Pixel 9 Pro 256GB',price:27990000,ram:12,features:['hot'],img:'https://cdn.tgdd.vn/Products/Images/42/329150/google-pixel-9-pro-xl-xam-1-750x500.jpg'},
                {id:5,brand:'iphone',name:'iPhone 15 Pro Max 256GB',price:28990000,ram:8,features:['sale'],img:'https://cdn.tgdd.vn/Products/Images/42/305660/iphone-15-pro-max-blue-thumbnew-600x600.jpg'},
                {id:6,brand:'xiaomi',name:'Xiaomi 14 512GB',price:18990000,ram:12,features:['sale','tragop'],img:'https://cdn.tgdd.vn/Products/Images/42/313203/xiaomi-14-xanh-la-thumb-600x600.jpg'},
                {id:7,brand:'samsung',name:'Samsung Z Fold6 512GB',price:44990000,ram:12,features:['new'],img:'https://cdn.tgdd.vn/Products/Images/42/309865/samsung-galaxy-z-fold6-xanh-thumbnew-600x600.jpg'},
                {id:8,brand:'iphone',name:'iPhone 14 Pro 128GB',price:24990000,ram:6,features:['tragop'],img:'https://cdn.tgdd.vn/Products/Images/42/289644/iphone-14-pro-max-den-thumb-600x600.jpg'}
              ];

              const grid = document.getElementById('grid');
              const countEl = document.getElementById('count');

              function renderProducts(list){
                grid.innerHTML = '';
                list.forEach(p => {
                  const el = document.createElement('article');
                  el.className = 'bg-white p-3 card';
                  el.setAttribute('data-brand', p.brand);
                  el.setAttribute('data-price', p.price);
                  el.setAttribute('data-ram', p.ram);
                  el.innerHTML = `
                    <a href="product-detail.html?id=${p.id}" class="block">
                      <div class="h-40 flex items-center justify-center mb-3">
                        <img src="${p.img}" alt="${p.name}" class="max-h-36 object-contain" />
                      </div>
                      <h4 class="font-semibold text-sm mb-1">${p.name}</h4>
                      <div class="text-[14px] font-black text-[var(--red)]">${(p.price).toLocaleString()}₫</div>
                    </a>
                  `;
                  grid.appendChild(el);
                });
                countEl.textContent = list.length;
              }

              // initial render
              renderProducts(PRODUCTS);

              // brand buttons
              document.querySelectorAll('[data-brand]').forEach(btn => {
                btn.addEventListener('click', () => {
                  const b = btn.getAttribute('data-brand');
                  document.querySelectorAll('[data-brand]').forEach(x=>x.setAttribute('aria-pressed','false'));
                  btn.setAttribute('aria-pressed','true');
                  applyFilters();
                  // store selected brand for filter
                  selectedBrand = b === 'all' ? null : b;
                  applyFilters();
                });
              });

              // filter state
              let selectedBrand = null;

              function applyFilters(){
                const price = (document.getElementById('priceRange') || {value:'any'}).value;
                const sale = document.getElementById('f-sale')?.checked;
                const f5g = document.getElementById('f-5g')?.checked;
                const tragop = document.getElementById('f-tragop')?.checked;

                let res = PRODUCTS.filter(p => {
                  if(selectedBrand && p.brand !== selectedBrand) return false;
                  if(price !== 'any'){
                    const [min,max] = price.split('-').map(Number);
                    if(!(p.price >= min && p.price < max)) return false;
                  }
                  if(sale && !p.features.includes('sale')) return false;
                  if(tragop && !p.features.includes('tragop')) return false;
                  if(f5g && !p.features.includes('5g')) return false;
                  return true;
                });

                // sort
                const sort = document.getElementById('sortBy')?.value || 'default';
                if(sort==='price-asc') res.sort((a,b)=>a.price-b.price);
                if(sort==='price-desc') res.sort((a,b)=>b.price-a.price);
                if(sort==='name') res.sort((a,b)=>a.name.localeCompare(b.name));

                renderProducts(res);
              }

              document.getElementById('priceRange')?.addEventListener('change', applyFilters);
              document.getElementById('f-sale')?.addEventListener('change', applyFilters);
              document.getElementById('f-tragop')?.addEventListener('change', applyFilters);
              document.getElementById('sortBy')?.addEventListener('change', applyFilters);

              document.getElementById('clearFilters')?.addEventListener('click', ()=>{
                document.getElementById('priceRange').value='any';
                document.getElementById('f-sale').checked=false;
                document.getElementById('f-tragop').checked=false;
                selectedBrand = null;
                document.querySelectorAll('[data-brand]').forEach(x=>x.setAttribute('aria-pressed','false'));
                document.querySelector('[data-brand]')?.setAttribute('aria-pressed','true');
                applyFilters();
              });

              // mobile filter toggle
              document.getElementById('mobile-filter-btn')?.addEventListener('click', ()=>{
                document.getElementById('mobileFilter').classList.remove('hidden');
              });
              document.getElementById('mobileFilterClose')?.addEventListener('click', ()=>{
                document.getElementById('mobileFilter').classList.add('hidden');
              });
              document.getElementById('applyMobileFilters')?.addEventListener('click', ()=>{
                const mPrice = document.getElementById('priceRangeMobile').value;
                document.getElementById('priceRange').value = mPrice;
                document.getElementById('mobileFilter').classList.add('hidden');
                applyFilters();
              });
              document.getElementById('clearMobileFilters')?.addEventListener('click', ()=>{
                document.getElementById('priceRangeMobile').value='any';
                document.getElementById('priceRange').value='any';
                applyFilters();
              });

              // search
              document.getElementById('search')?.addEventListener('input', (e)=>{
                const q = e.target.value.toLowerCase();
                const filtered = PRODUCTS.filter(p => p.name.toLowerCase().includes(q));
                renderProducts(filtered);
              });

            </script>
          </body>
        </html>
                </button>

              </div>
