      /* CellphoneS Theme - Professional Red/Blue/Amber */
      :root {
        --primary-red: #F44336;
        --primary-red-dark: #D32F2F;
        --secondary-blue: #2196F3;
        --secondary-blue-light: #64B5F6;
        --accent-amber: #FFC107;
        --white-bg: #FFFFFF;
        --gray-light: #F5F5F5;
        --text-primary: #212121;
        --text-secondary: #757575;
        --border-gray: #E0E0E0;
      }

      /* Animation cho ảnh khi load */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: scale(0.95);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }
      
      .animate-fadeIn {
        animation: fadeIn 0.5s ease-in-out;
      }

      /* Red Pulse Animation for CTA */
      @keyframes redPulse {
        0%, 100% {
          box-shadow: 0 0 0 0 rgba(244, 67, 54, 0.7);
        }
        50% {
          box-shadow: 0 0 0 10px rgba(244, 67, 54, 0);
        }
      }

      .pulse-red {
        animation: redPulse 2s ease-in-out infinite;
      }

      /* Skeleton loading cho ảnh */
      img[loading="lazy"]:not([src]) {
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
      }

      @keyframes shimmer {
        0% {
          background-position: -200% 0;
        }
        100% {
          background-position: 200% 0;
        }
      }

      /* Placeholder cho ảnh lỗi */
      img.error-image {
        filter: grayscale(100%);
        opacity: 0.3;
      }
    </style>
  </head>
